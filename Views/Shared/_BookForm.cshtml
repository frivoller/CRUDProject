@model BookViewModel

<div class="mb-3">
    <label asp-for="Title" class="form-label">Title</label>
    <input asp-for="Title" class="form-control custom-input" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="AuthorId" class="form-label">Author</label>
    <select asp-for="AuthorId" asp-items="@ViewBag.Authors" class="form-select custom-input">
        <option value="">Select Author</option>
    </select>
    <span asp-validation-for="AuthorId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Genre" class="form-label">Genre</label>
    <input asp-for="Genre" class="form-control custom-input" />
    <span asp-validation-for="Genre" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="PublishDate" class="form-label">Publish Date</label>
    <input asp-for="PublishDate" type="date" class="form-control custom-input" />
    <span asp-validation-for="PublishDate" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="ISBN" class="form-label">ISBN</label>
    <input asp-for="ISBN" class="form-control custom-input" />
    <span asp-validation-for="ISBN" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="CopiesAvailable" class="form-label">Copies Available</label>
    <input asp-for="CopiesAvailable" type="number" class="form-control custom-input" />
    <span asp-validation-for="CopiesAvailable" class="text-danger"></span>
</div>